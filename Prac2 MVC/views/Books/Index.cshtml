@model IEnumerable<Prac2mvc.Models.Book>

@{
    ViewBag.Title = "Index";

}

<h2>Index</h2>
File path:@ViewBag.path
<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Books", FormMethod.Get))
{
    <b>Search Options:</b>
    @Html.RadioButton("option", "BookID")<label>Book ID</label>
    @Html.RadioButton("option", "Name")<label>Name</label>
    @Html.RadioButton("option", "Author")<label>Author</label>
    @Html.RadioButton("option", "Year")<label>Year</label>
    @Html.RadioButton("option", "Price")<label>Price</label>

    @Html.TextBox("Search")<input type="submit" name="Search" value="search" class="btn btn-default" />

}

@using (Html.BeginForm("Index", "Books", FormMethod.Post))
{
    <b>Delete Options:</b>
    @Html.CheckBox("Year")<label>Year</label>

    @Html.TextBox("Delete")<input type="submit" name="Delete" value="delete" class="btn btn-warning" />
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th></th>
    </tr>

    @if (!Model.Any())
    {
        <tr><td colspan="8">There are no matching results...</td></tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    }


</table>
